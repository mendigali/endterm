<!doctype html>
<html lang="en">

<head>
    <%- include('partials/head.ejs', {page: "Products"}); %>
    <link rel="stylesheet" href="css/products.css">
</head>

<body>
<header>
    <%- include('partials/header.ejs', {page: "Products"}); %>
</header>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h2 class="border-bottom pb-3 mb-5">Product Order Form</h2>
            <form class="form-horizontal" method="POST" action="/confirm">
                <div class="row row-cols-1 row-cols-md-3 g-4 d-flex align-items-stretch">
                    <% products.products.forEach((product) => { %>
                        <div class="col">
                            <div class="card">
                                <img src="images/<%= product.picture %>" class="card-img-top" alt="<%= product.name %>">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="card-title"><%= product.name %></h5>
                                        <h4>$<%= Number.parseFloat(product.price).toFixed(2) %></h4>
                                    </div>
                                    <p class="card-text"><%= product.description %></p>
                                    <div class="d-flex justify-content-between align-items-end">
                                        <div class="form-group">
                                            <label for="quantity<%= product.id %>"
                                                   class="cols-sm-6 control-label"><small>Quantity</small></label>
                                            <div class="cols-sm-6">
                                                <div class="input-group">
                                                    <input class="form-control" id="quantity<%= product.id %>"
                                                           name="quantity<%= product.id %>" type="number"
                                                           value="1" min="1" max="100" step="1"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="checkbox" class="btn-check" name="addToCart<%= product.id %>"
                                                   id="addToCart<%= product.id %>" autocomplete="off">
                                            <label class="btn btn-outline-success" for="addToCart<%= product.id %>">Add
                                                to cart</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <div class="form-group mt-5 d-flex justify-content-center">
                    <button type="submit"
                            class="btn btn-success btn-lg">Order Now
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs'); %>
</body>

</html>